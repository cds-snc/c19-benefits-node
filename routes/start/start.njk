{% extends "base.njk" %}
{% from 'banner.njk' import banner as banner %}

{% block content %}
    <h1>{{ __('start.title') }}</h1>

    <div class="bg-red-100 border-l-4 border-red-800 p-4 mt-8 hidden cookie-warning">
        <h2 class="text-2xl">Enable cookies to use this service</h2>
        <p class="p-0">It looks like you have cookies disabled. This service uses cookies to show your results. You will not see results without enabling cookies.</p>
    </div>

    <div>
        <p class="mb-8">{{ __('start.intro.2') | safe }}</p>
        <h2 class="text-2xl">{{ __('start.subheader') }}</h2>
        <p>{{ __('start.intro.3') }}</p>
    </div>


    <div class="start-button">
        <a class="font-semibold button-link py-6 px-5 border shadow" data-gc-analytics-customclick="ESDC|EDSC:Covid19 Benefits:Start button click" data-cy="start" href="{{ routePath(route.next) }}" role="button" draggable="false">
            {{ __('start.submit') }}
        </a>
    </div>

    <div>
    <p>
      {{ __('start.business') }}
      <a href="{{ __('start.businesslink.url') }}"
        target="_blank"
        data-gc-analytics-customclick="ESDC|EDSC:Covid19 Benefits:businessHelp button click"
        >{{__('start.businesslink.text')}}</a>
    </p>

{% endblock %}
