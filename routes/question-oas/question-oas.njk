{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('oas.title') }}</h1>
    <div>
        {% call form() %}
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ radioButtons('oas',
                [
                    { value: 'yes', text:__('oas.1') },
                    { value: 'no', text:__('oas.2') },
                    { value: 'unsure', text:__('oas.3') }
                ],
                data.oas,
                __('form.oas'),
                errors,
                {
                    required: true
                }
            )}}
            {{ formButtons() }}
        {% endcall %}
    </div>

{% endblock %}
