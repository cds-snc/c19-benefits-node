<div class="error-list" role="alert" tabindex="0">
    <h2 class="error-list__header">{{ __('Please correct the errors on the page') }}</h2>
    <ol data-cy="errors" class="error-list__list" id="formErrors">
        {% for field, error in errors %}
            <li class="error-list__list-item">
                <a class="error-list__link" href="#{{ error.param }}">{{ __(error.msg) }}</a>
            </li>
        {% endfor %}
    </ol>
</div>