{% macro radioButtons(key, values, selectedValue, question, errors, attributes) %}
    <div class="{{ 'has-error' if errors and errors[key] }}">
        <fieldset class="fieldset">
            <legend class="fieldset__legend">
            {% if attributes.required %}
                <span aria-hidden="true" class="required">*</span>
            {% endif %}
            {{ question }}
            {% if attributes.required %}
                <span class="required">{{ __("required")}}</span>
            {% endif %}
            </legend>
            {% if attributes.hint %}
                <span class="form-message">
                    {% if attributes.safeHint %}
                        {{attributes.hint | safe }}
                    {% else %}
                        {{ attributes.hint }}
                    {% endif %}
                </span>
            {% endif %}
            <div class="multiple-choice multiple-choice--radios" id="{{ key }}">
                {% if errors and errors[key] %}
                    {{ validationMessage(errors[key], key) }}
                {% endif %}
                {% for item in values %}
                {% set itemId %}{{ key }}{{ item.value }}{%endset%}
                    <div class="multiple-choice__item">
                        <input id="{{ itemId }}"
                            name="{{ key }}"
                            type="radio"
                            value="{{ item.value }}"
                            {% if selectedValue == item.value %}
                                checked="checked"
                            {% endif %}
                            {% if errors and errors[id] %}
                                aria-describedby="{{ id + '-error' }}"
                                aria-invalid="true"
                            {% endif %}
                            {% if attributes.disabled %}
                                disabled="disabled"
                            {% endif %}
                            >
                        <label for="{{ itemId }}">
                            {% if attributes.safe %}
                                {{ item.text | safe }}
                            {% else %}
                                {{ item.text }}
                            {% endif %}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </fieldset>
    </div>
{% endmacro %}