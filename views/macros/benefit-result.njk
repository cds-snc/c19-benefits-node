{% macro benefitLi(strongText, text) %}
  <li>
    <div class="py-2">
      <p class="relative m-0 pl-10">
        <img src="{{ asset('/img/check-circle.svg') }}" class="w-6 h-6 mt-1 -ml-10 absolute fill-current" alt="">
        <strong>{{ strongText | safe }}</strong> {% if text %}{{ text }}{% endif %}
      </p>
    </div>
  </li>
{% endmacro %}

{% macro infoLink(id, url, text) %}
  <a href="{{ url }}"
    data-gc-analytics-customclick="ESDC|EDSC:Covid19 Benefits:{{id}} button click"
    target="_blank"
    class="no-underline text-white px-4 py-2 bg-blue-800 hover:bg-blue-900 rounded text-center">
    {{ text }}
  </a>
{% endmacro %}