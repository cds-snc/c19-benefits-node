{% macro formButtons(submitButtonText = 'Next', cancelUrl = '/clear') %}
    <div class="buttons">
        <div class="next-button">
            <button class="py-3 px-4 border shadow" type="submit">{{ __(submitButtonText) }}</button>
        </div>
    </div>
{% endmacro %}

{% macro linkButtons(confirmURL) %}
    <div class="buttons-row">
        <a href="{{ confirmURL }}">{{ __('Confirm') }}</a>
    </div>
{% endmacro %}